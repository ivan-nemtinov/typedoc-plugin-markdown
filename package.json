{
  "name": "typedoc-plugin-markdown",
  "version": "2.3.1",
  "description": "A plugin for TypeDoc that enables TypeScript API documentation to be generated in Markdown.",
  "main": "dist/index.js",
  "scripts": {
    "lint": "tslint --project ./tsconfig.json",
    "build": "rimraf dist && tsc && copyfiles --up 1 ./src/**/*.hbs ./dist/",
    "prepublishOnly": "npm run test",
    "pretest": "npm run lint && npm run build",
    "test": "jest",
    "test:updateSnapshot": "jest --updateSnapshot",
    "fixtures": "rm -rf ./test/fixtures && node ./tasks/fixtures.js",
    "examples": "npm run build && rm -rf out && node ./tasks/link-plugin.js && npm run examples:html && npm run examples:md",
    "examples:html": "typedoc --tsconfig ./test/stubs/tsconfig.json --options ./test/options.json --plugin none --out ./out/html",
    "examples:md": "typedoc --tsconfig ./test/stubs/tsconfig.json --options ./test/options.json --out ./out/md",
    "prepare": "npm run build"
  },
  "author": "Thomas Grey",
  "license": "MIT",
  "engines": {
    "node": ">= 8.0.0"
  },
  "bugs": {
    "url": "https://github.com/tgreyuk/typedoc-plugin-markdown/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tgreyuk/typedoc-plugin-markdown.git"
  },
  "keywords": [
    "markdown",
    "typescript",
    "documentation",
    "api",
    "typedocplugin",
    "typedoc"
  ],
  "peerDependencies": {
    "typedoc": ">=0.17.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.1",
    "@types/jest": "^25.2.3",
    "@types/node": "^14.0.9",
    "copyfiles": "^2.3.0",
    "jest": "^26.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.0",
    "tslint": "^6.1.2",
    "typedoc": "0.17.7",
    "typescript": "3.9.x"
  },
  "dependencies": {
    "fs-extra": "^9.0.0",
    "handlebars": "^4.7.6"
  }
}
